<%# 商品編集ページ %>
<div class="ag-container">
  <div style="max-width: 600px; margin: 0 auto;">
    <div class="ag-page-header">
      <h1>✏ 商品レビューを編集</h1>
    </div>

    <div class="ag-form-card">
      <%= render 'layouts/error', obj: @item %>

      <%= form_with model: @item, method: :patch do |f| %>
        <div class="ag-form-group">
          <%= f.label :title, "商品名" %>
          <%= f.text_field :title, placeholder: "商品名を入力...", class: "form-control" %>
        </div>
        <div class="ag-form-group">
          <%= f.label :body, "感想・レビュー" %>
          <%= f.text_area :body, placeholder: "感想を書いてみましょう...", rows: 5, class: "form-control" %>
        </div>
        <div style="display: flex; gap: 0.75rem; align-items: center; margin-top: 0.5rem;">
          <%= f.submit "💾 更新する", class: "ag-btn ag-btn--primary" %>
          <%= link_to "← 詳細に戻る", item_path(@item), class: "ag-btn ag-btn--outline" %>
          <%= link_to "一覧に戻る", items_path, class: "ag-btn ag-btn--outline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>