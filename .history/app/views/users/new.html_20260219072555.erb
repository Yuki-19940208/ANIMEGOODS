<%# 新規登録ページ %>
<div class="ag-auth-wrap">
  <div class="ag-auth-card">
    <h2 class="ag-auth-card__title">✨ 新規登録</h2>
    <p class="ag-auth-card__sub">アカウントを作成してレビューを投稿しましょう</p>

    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="ag-form-group">
        <%= f.label :name, "ユーザー名" %>
        <%= f.text_field :name, placeholder: "ユーザー名" %>
      </div>

      <div class="ag-form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, placeholder: "example@email.com" %>
      </div>

      <div class="ag-form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上" %>
      </div>

      <div class="ag-form-group">
        <%= f.label :password_confirmation, "パスワード確認" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードを再入力" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 1.25rem; font-size: 0.88rem; color: #9090b0;">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持する" %>
        </div>
      <% end %>

      <div style="margin-top: 1rem;">
        <%= f.submit "✨ 登録する", class: "ag-btn ag-btn--primary", style: "width: 100%; justify-content: center;" %>
      </div>
    <% end %>

    <div style="margin-top: 1.5rem; text-align: center; font-size: 0.88rem;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>