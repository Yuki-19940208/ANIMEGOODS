<h2>商品</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>商品</th>
      <th>感想</th>
    </tr>
  </thead>
  
  <tbody>
    <% s.each do || %>
      <tr>
        <td>
          <%= link_to user_path(.user_id) do %>
            <%= image_tag .user.get_profile_image(80,80) %>
          <% end %>
          </td>
        <td>
          <%= link_to _path(.id) do %>
            <%= .title %>
          <% end %>
          </td>
        <td><%= .body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
