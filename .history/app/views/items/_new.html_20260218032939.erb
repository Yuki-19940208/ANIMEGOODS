<h2 class="mt-3">商品の新規登録</h2>

<%= form_with model: item do |f| %>
  <div class="form-group">
    <%= f.label :e %>
    <%= f.text_field :e, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create item', class: "btn btn-success" %>
  </div>
<% end %>