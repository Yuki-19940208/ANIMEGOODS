<h2 class="mt-3">商品を新規登録</h2>

<%= form_with model: item do |f| %>
  <div class="form-group">
    <%= f.label :商品名 %>
    <t><%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :感想 %>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
<% end %>