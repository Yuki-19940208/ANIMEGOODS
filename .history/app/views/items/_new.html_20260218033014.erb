<h2 class="mt-3">商品の新規登録</h2>

<%= form_with model: i do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create i', class: "btn btn-success" %>
  </div>
<% end %>