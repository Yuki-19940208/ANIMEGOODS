<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>商品編集</h1>
      
      <%= render 'layouts/error', obj: @item %>
      
      <%= form_with model: @item, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :商品名 %>
          <%= f.text_field :title,class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :感想 %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新する", class: "btn btn-success" %>
        </div>
      <% end %>
      
      <%= link_to "詳細ページ", item_path(@item) %>
      
      <%= link_to "一覧に戻る", items_path %>
    </div>
  </div>
</div>